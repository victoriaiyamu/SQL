
--How many movie titles are there in the database? (movies only, not tv shows)

SELECT N.type,N.show_id,N.title,N.country,P.director
FROM "netflix_titles_info" AS N
INNER JOIN "netflix_people" AS P
ON N.show_id=P.show_id;
--When was the most recent batch of tv shows
--and/or movies added to the database

SELECT COUNT(*) FROM "netflix_titles_info"
WHERE type='movie';

select max(date(date_added))
FROM "netflix_titles_info";

--Who was the Director for the movie The Starling?

SELECT
director
FROM "netflix_titles_info" titles
LEFT JOIN "netflix_people" people
ON titles.show_id=people.show_id
WHERE titles.title='The Starling';

--List all the movies and tv shows in alphabetical order.
SELECT title FROM "netflix_titles_info"
ORDER BY title asc;

--What is the oldest movie in the database and what year was it made?
SELECT title, release_year
FROM "netflix_titles_info"
WHERE type='Movie'
ORDER BY release_year
LIMIT 1;
--using subqueries to answer the previous question when the answer is more than 1
SELECT title, release_year
FROM "netflix_titles_info"
WHERE type = 'Movie'
AND release_year <=
(SELECT MIN(release_year)
FROM "netflix_titles_info"
WHERE type = 'Movie');
